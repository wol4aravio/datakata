{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@common/*": ["common/*"],
      "@datakata/*": ["src/datakata/*"],
      "@panovskiy/*": ["src/panovskiy/*"],
      "@bigdatawhale/*": ["src/bigdatawhale/*"],
      "@cyberpony/*": ["src/cyberpony/*"],
      "@foxdriven/*": ["src/foxdriven/*"],
    },
    "plugins": [
      {
        "name": "@astrojs/ts-plugin",
      },
    ],
  },
  "include": ["src/**/*.d.ts", "src/**/*.ts", "src/**/*.astro"],
}
