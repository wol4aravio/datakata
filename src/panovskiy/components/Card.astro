---
const { details, url } = Astro.props;
import { Icon } from "astro-icon/components";
---

<div
  class="relative h-[6rem] w-full text-justify md:aspect-square md:h-full md:w-[100%]"
>
  <div
    class="absolute left-0 top-0 h-[5rem] w-[calc(100%-0.5rem)] bg-black md:h-[calc(100%-0.5rem)]"
  >
    1
  </div>
  <div
    class="absolute bottom-0 right-0 h-[5.5rem] w-[calc(100%-0.5rem)] border-2 border-black bg-white p-2 md:h-[calc(100%-0.5rem)]"
  >
    <div class="flex h-full flex-col justify-between">
      <div class="flex flex-col justify-center md:basis-2/3">
        <slot />
      </div>
      <div class="flex flex-col justify-end text-right text-sm md:basis-1/3">
        <a href={url} class="hover:underline">
          {details}
        </a>
      </div>
    </div>
  </div>
</div>
