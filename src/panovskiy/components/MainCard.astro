---
const { details, url } = Astro.props;
---

<div
  class="min-h-[6rem] border-2 border-black p-2 shadow-[-0.5rem_-0.5rem__rgba(0,0,0)] md:aspect-square"
>
  <div class="flex h-full flex-col justify-between">
    <div class="flex flex-col justify-items-center md:basis-2/3">
      <div class="basis-1/2"></div>
      <div class="basis-1/2">
        <slot />
      </div>
    </div>
    <div class="flex flex-col justify-end text-right text-sm md:basis-1/3">
      <a href={url} class="underline hover:decoration-2">
        {details}
      </a>
    </div>
  </div>
</div>
