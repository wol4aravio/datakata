---
const { title, icon, shadow_color, url, url_text } = Astro.props;

const icon_path = "/icons/" + icon;
---

<div
  class:list={[
    "border-2 border-black p-4 shadow-[-0.5rem_-0.5rem]",
    shadow_color,
  ]}
>
  <div class="text-center">
    {title}
    <img class="container max-h-[64px] max-w-[64px]" src={icon_path} />
  </div>
  <div class="text-justify">
    <slot />
  </div>
</div>
