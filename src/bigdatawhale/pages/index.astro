---
import MainLayout from "../layouts/MainLayout.astro";

import Title from "../components/Title.astro";
import Footer from "../components/Footer.astro";
---

<MainLayout
  page_title="Технологии обработки данных"
  page_description="Платформа для тренировки и знакомства с технологиями обработки и хранения данных"
>
  <div class="flex h-full min-h-screen w-screen flex-col justify-between">
    <div
      class="mx-auto mt-4 flex w-full max-w-7xl grow flex-col justify-center"
    >
      <Title />
      <hr
        class="container mt-4 w-[40%] rounded-full border-t-4 border-bigdatawhale-accent"
      />
      <div class="mx-auto mt-4">
        Платформа для тренировки и знакомства с технологиями обработки и
        хранения данных
      </div>
      <div class="mx-auto mt-4">Запуск в 2024</div>
      <img class="mx-auto mt-4 h-20 w-20" src="favicon.svg" />
    </div>
    <div class="w-screen"><Footer /></div>
  </div>
</MainLayout>
