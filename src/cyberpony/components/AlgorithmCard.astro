---
import TagPill from "@cyberpony/components/TagPill.astro";

const { title, tags, url = "/", prod } = Astro.props;
---

<a
  class="flex h-full min-h-[8rem] flex-col justify-between gap-2 border-2 border-black p-2 shadow-[-0.5rem_-0.5rem] shadow-cyberpony-accent"
  href={url}
>
  <div
    class="h-full text-center text-base font-semibold decoration-cyberpony-accent decoration-2 hover:underline md:text-lg"
  >
    {
      prod ? (
        title
      ) : (
        <>
          <span class="bg-cyberpony-accent">[DEV]</span>
          {title}
        </>
      )
    }
  </div>
  <div class="flex flex-row">
    <TagPill tag={tags[0]} />
    {
      tags.slice(1).map((t: string) => {
        return (
          <>
            <span class="font-bold text-cyberpony-accent">/</span>
            <TagPill tag={t} />
          </>
        );
      })
    }
  </div>
  <div class="text-justify text-sm">
    <slot />
  </div>
</a>
