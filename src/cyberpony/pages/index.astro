---
import MainLayout from "@cyberpony/layouts/MainLayout.astro";

import IndexTitle from "@common/components/IndexTitle.astro";
import Footer from "@common/components/Footer.astro";
---

<MainLayout
  page_title="Оптимизация"
  page_description="Платформа для изучения алгоритмов оптимизации"
>
  <div class="flex h-full min-h-screen w-screen flex-col justify-between">
    <div
      class="mx-auto mt-4 flex w-full max-w-7xl grow flex-col justify-center"
    >
      <IndexTitle title="Cyber Pony" />
      <hr
        class="container mt-4 w-[40%] rounded-full border-t-4 border-cyberpony-accent"
      />
      <div class="mx-auto mt-4">
        Платформа для изучения алгоритмов оптимизации
      </div>
      <div class="mx-auto mt-4">Скоро запуск (:</div>
      <img class="mx-auto mt-4 h-20 w-20" src="favicon.svg" />
    </div>
    <div class="w-screen"><Footer /></div>
  </div>
</MainLayout>
