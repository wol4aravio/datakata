---
import "@common/styles/alpine.css";

const { page_title, suffix, page_description, yandex_verification } =
  Astro.props;
const canonical_url = new URL(Astro.url.pathname, Astro.site);
---

<html>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{page_title + suffix}</title>
    <meta name="description" content={page_description} />
    <meta name="yandex-verification" content={yandex_verification} />
    <link rel="canonical" href={canonical_url} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Roboto+Mono:ital,wght@0,400;0,600;0,700;1,400;1,600;1,700&display=block"
      rel="stylesheet"
    />
  </head>
  <body class="font-roboto-mono">
    <slot />
  </body>
</html>
